{% if 'data0' in grains['ip4_interfaces'] and grains['ip4_interfaces']['data0'] %}
  {%- set public_data_if = 'data0' -%}
  {%- set pvt_data_if = None -%}
{% else %}
  {%- set public_data_if = pillar['cluster'][grains['id']]['network']['data_nw']['iface'][0] -%}
  {%- set pvt_data_if = pillar['cluster'][grains['id']]['network']['data_nw']['iface'][1] -%}
{%- endif -%}
pvt-data-if: {{ pvt_data_if }}
public-data-if: {{ public_data_if }}
mgmt-if: {{ pillar['cluster'][grains['id']]['network']['mgmt_nw']['iface'][0] }}
{% if salt['cmd.run']('lspci -d 15b3:1017:0200') %}
net-type: o2ib
{% else %}
net-type: tcp
{% endif %}
ip1: {{ pillar['cluster']['eosnode-1']['network']['data_nw']['roaming_ip'] }}
ip2: {{ pillar['cluster']['eosnode-2']['network']['data_nw']['roaming_ip'] }}
left-node: {{ pillar['cluster']['eosnode-1']['hostname'] }}
right-node: {{ pillar['cluster']['eosnode-2']['hostname'] }}
left-volume: {{ pillar['cluster']['eosnode-1']['storage']['metadata_device'][0] }}2
right-volume: {{ pillar['cluster']['eosnode-2']['storage']['metadata_device'][0] }}2
skip-mkfs: true
